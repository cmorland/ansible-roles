[client]
port = 3306 # mod
socket = /var/lib/mysql/mysql.sock # mod

[mysql]
default_character_set = utf8 # mod

[mysqld]
port = 3306 # mod
datadir=/var/lib/mysql
socket=/var/lib/mysql/mysql.sock
user=mysql
# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links=0

max_allowed_packet = 8M # mod
max_connections = 1024 # mod
max_connect_errors = 10000 # mod
character-set-server=utf8 # mod
default-storage-engine=InnoDB # mod

innodb_strict_mode # mod
innodb_data_file_path = ibdata1:10M:autoextend # mod
innodb_data_home_dir = /var/lib/mysql # mod
innodb_file_format = Barracuda # mod
innodb_file_per_table # mod

[mysqld_safe]
log-error=/var/log/mysqld.log
pid-file=/var/run/mysqld/mysqld.pid
